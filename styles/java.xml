<?xml version="1.0" encoding="UTF-8"?>
<profiles version="21">
    <profile kind="CodeFormatterProfile" name="SE-EDU" version="21">
    <!-- Switch case -->
    <setting id="org.eclipse.jdt.core.formatter.indent_switchstatements_compare_to_switch" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.indent_switchstatements_compare_to_cases" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.indent_breaks_compare_to_cases" value="true"/>

    <!-- line limit -->
    <setting id="org.eclipse.jdt.core.formatter.lineSplit" value="120"/>
    <setting id="org.eclipse.jdt.core.formatter.comment.line_length" value="120"/>

    <!-- Method invocation arguments: don't force one-per-line; wrap only when needed -->
    <setting id="org.eclipse.jdt.core.formatter.alignment_for_arguments_in_method_invocation" value="16"/>
    <!-- Keep parentheses on the same line as the method name when wrapping -->
    <setting id="org.eclipse.jdt.core.formatter.parentheses_positions_in_method_invocation" value="preserve_positions"/>

    <!-- Lambda-specific -->
    <!-- Keep the arrow on the same line as the lambda parameters -->
    <setting id="org.eclipse.jdt.core.formatter.wrap_before_lambda_arrow" value="false"/>
    <!-- Prefer breaking after '->' instead of before the lambda -->
    <setting id="org.eclipse.jdt.core.formatter.wrap_after_lambda_arrow" value="true"/>

    <!-- comment indentation -->
    <!-- Allow formatter to indent comments (set to true to keep at column 0) -->
    <setting id="org.eclipse.jdt.core.formatter.wrap_before_string_concatenation" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.alignment_for_string_concatenation" value="16"/>

    <!-- configured in nvim autcmd -->
    <!-- Use spaces, not tabs -->
    <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="space"/>
    <!-- Tab size = 4 spaces -->
    <setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="4"/>
    <!-- One indent level = 4 spaces -->
    <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="4"/>

    <!-- preserve line breaks -->
    <setting id="org.eclipse.jdt.core.formatter.join_wrapped_lines" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.join_lines_in_comments" value="false"/>

    <!-- import order -->
    <setting id="org.eclipse.jdt.core.formatter.importOrder" value="java,javax,org,com"/>
    <setting id="org.eclipse.jdt.core.formatter.importOrderStatic" value="java,javax,org,com"/>
    <setting id="org.eclipse.jdt.core.formatter.sort_static_imports_separately" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.imports_static_on_top" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_new_line_between_import_groups" value="true"/>
    </profile>
</profiles>
